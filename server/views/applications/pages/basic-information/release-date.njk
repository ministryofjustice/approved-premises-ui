{% from "govuk/components/notification-banner/macro.njk" import govukNotificationBanner %}

{% extends "../layout.njk" %}

{% block questions %}

  {% set releaseDateHTML %}
  {{
    formPageDateInput(
      {
        fieldName: "releaseDate",
        fieldset: {
          legend: {
            text: "Expected date of release"
          }
        },
        hint: {
          text: "For example, 27 3 2007"
        },
        items: dateFieldValues('releaseDate', errors)
      },
      fetchContext()
    )
  }}
  {% endset -%}

  {% set bannerHTML %}
  {% set html %}
  <p>You can still submit your application.</p>
  <p> An assessor will make a decision on suitability for an Approved Premises placement.</p>
  {% endset %}

  {{ govukNotificationBanner({
        html: html
    }) }}
  {% endset -%}

  {{
    formPageRadios(
      {
        fieldName: "knowReleaseDate",
        fieldset: {
          legend: {
            text: page.title,
            isPageHeading: true,
            classes: "govuk-fieldset__legend--l"
          }
        },
        items: [
          {
            value: "yes",
            text: "Yes",
            conditional: {
              html: releaseDateHTML
            }
          },
          {
            text: "No, the release date is to be determined by the parole board or other hearing",
            value: "no", 
            conditional: {
              html: bannerHTML
            }
          }
        ]
      },
      fetchContext()
    )
  }}

{% endblock %}
