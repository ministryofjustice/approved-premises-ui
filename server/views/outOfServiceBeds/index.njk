{% from "govuk/components/table/macro.njk" import govukTable %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}

{%- from "moj/components/identity-bar/macro.njk" import mojIdentityBar -%}

{% extends "../partials/layout.njk" %}

{% set pageTitle = applicationName + " - " + pageHeading %}

{% block beforeContent %}
  {{ govukBackLink({
		text: "Back",
		href: '/'
	}) }}
{% endblock %}

{% set tableHeadings = [
  {
    text: 'Premises'
  }, {
    text: 'Room'
  }, {
    text: 'Bed'
  }, {
    text: 'Out of service from'
  }, {
    text: 'Out of service until'
  }, {
    text: 'Reason'
  }, {
    text: 'Ref number'
  }, {
    text: 'Days lost'
  }, {
    text: 'Action'
  }
] %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full-width">
      <h1 class="govuk-heading-l">{{ pageHeading }}</h1>

      {% if outOfServiceBeds %}

        {{
          govukTable({
            caption: "Out of service beds",
            captionClasses: "govuk-table__caption--m",
            head: tableHeadings,
            rows: OutOfServiceBedUtils.allOutOfServiceBedsTableRows(outOfServiceBeds)
          })
        }}

      {% endif %}
    </div>
  </div>
{% endblock %}
