{% from "govuk/components/fieldset/macro.njk" import govukFieldset %}

{% extends "../layout.njk" %}

{% block questions %}
    <h1 class="govuk-heading-l">
        {{page.title}}</h1>

    {% set yesDetail %}
    {{ formPageTextarea({
        fieldName: "yesDetail",
        label: {
          text: page.questions.detail
        }
    }, fetchContext()) }}
    {% endset -%}

    {% set noDetail %}
    {{ formPageTextarea({
        fieldName: "noDetail",
        label: {
          text: page.questions.detail
        }
    }, fetchContext()) }}
    {% endset -%}

    {{
            formPageRadios({
                fieldset: {
                    legend: {
                    text: page.questions.mhapIdentifiedAsSuitable,
                    classes: "govuk-fieldset__legend--m"
                    }
                },
                fieldName: "mhapIdentifiedAsSuitable",
                    items: [
                    {
                        value: "yes",
                        text: "Yes",
                        conditional: {
                            html: yesDetail
                    }
                    },
                    {
                        value: "no",
                        text: "No",
                        conditional: {
                            html: noDetail
                    }
                    }
                    ]
                }, fetchContext()
            )
        }}

    {{
            formPageTextarea({
                fieldName: "unsuitabilityForMhapRationale",
                label: {
                    text: page.questions.unsuitabilityForMhapRationale,
                    classes: "govuk-label--s"
                }
            }, fetchContext())
        }}

{% endblock %}
